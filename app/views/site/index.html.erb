<% if current_user %>
  <h2>Latest Bookmarks</h2>
  <table style="width: 100%">
    <thead>
      <tr>
        <th>Url</th>
        <th>User</th>
      </tr>
    </thead>

    <tbody>
      <% @bookmarks.each do |bookmark| %>
        <tr>
          <td><%= link_to bookmark.title, bookmark.url %></td>
          <td><%= link_to bookmark.user.username, profile_path(bookmark.user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @bookmarks %>

<% else %>
  <div class="panel">
    <h1>Share your bookmarks!</h1>
    <p>A simple app to track and share your study bookmarks with others.</p>
    <%= link_to "Get started today", new_user_registration_path, :class => "button button-large" %>
  </div>

  <hr>

  <div class="row">
    <div class="large-8 columns">
      <h3>Collective Thinking</h3>
      <p>
      Collective Thinking helps you to keep track of your 
      bookmarks and also share them with your friends around the world.  
      </p>
    </div>
    <div class="large-4 columns">
      <h3>About this app</h3>
      <p>This is an app developed by Elena Calinescu. Check the source code on <a href="https://github.com/selenluft/ThinkBinder/tree/master">GitHub</a>. </p>
    </div>
  </div>
<% end %>

